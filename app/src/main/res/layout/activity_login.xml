<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_login_bg">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_white_10"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:text="@string/str_login"
            android:textColor="@color/color_333333" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="35dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/ic_user"
                android:drawablePadding="11dp"
                android:textSize="15sp"
                android:hint="@string/str_input_account"
                android:paddingBottom="15dp"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_BCBCBC" />

            <EditText
                android:id="@+id/et_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawableStart="@mipmap/ic_pass"
                android:drawablePadding="11dp"
                android:textSize="15sp"
                android:hint="@string/str_input_pass"
                android:inputType="textPassword"
                android:paddingBottom="15dp"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_BCBCBC" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_submit"
            android:layout_marginBottom="27.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/shape_blue_20"
            android:paddingHorizontal="137dp"
            android:paddingVertical="7.5dp"
            android:text="@string/str_login_sub"
            android:textColor="@color/color_FFFFFF" />


    </LinearLayout>


</RelativeLayout>